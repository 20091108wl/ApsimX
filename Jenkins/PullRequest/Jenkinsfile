pipeline {
	agent none
    stages {
		stage('RunTests') {
			parallel {
				stage('Prototypes') {
					agent {
						label "windows"
					}
					steps {
						bat '''
							@echo off
							if not exist ApsimX (
								git config --system core.longpaths true
								git clone https://github.com/APSIMInitiative/ApsimX ApsimX
							)
							if not exist APSIM.Shared (
								git clone https://github.com/APSIMInitiative/APSIM.Shared APSIM.Shared
							)
							git -C APSIM.Shared pull origin master
							echo %path%
							cd ApsimX\\Jenkins
							call cleanup
							call build
							call runTests Prototypes
						'''
					}
				}
				stage('UI') {
					agent {
						label "windows"
					}
					steps {
						bat '''
							@echo off
							if not exist ApsimX (
								git config --system core.longpaths true
								git clone https://github.com/APSIMInitiative/ApsimX ApsimX
							)
							if not exist APSIM.Shared (
								git clone https://github.com/APSIMInitiative/APSIM.Shared APSIM.Shared
							)
							git -C APSIM.Shared pull origin master
							cd ApsimX\\Jenkins
							call cleanup
							call build
							call runTests UI
						'''
					}
				}
				stage('Validation') {
					agent {
						label "windows"
					}
					steps {
						bat '''
							@echo off
							if not exist ApsimX (
								git config --system core.longpaths true
								git clone https://github.com/APSIMInitiative/ApsimX ApsimX
							)
							if not exist APSIM.Shared (
								git clone https://github.com/APSIMInitiative/APSIM.Shared APSIM.Shared
							)
							git -C APSIM.Shared pull origin master
							cd ApsimX\\Jenkins
							call cleanup
							call build
							call runTests Validation
							call performanceTests
						'''
					}
				}
				stage('Unit Tests') {
					agent {
						label "windows"
					}
					steps {
						bat '''
							@echo off
							if not exist ApsimX (
								git config --system core.longpaths true
								git clone https://github.com/APSIMInitiative/ApsimX ApsimX
							)
							if not exist APSIM.Shared (
								git clone https://github.com/APSIMInitiative/APSIM.Shared APSIM.Shared
							)
							git -C APSIM.Shared pull origin master
							cd ApsimX\\Jenkins
							call cleanup
							call build
							call runTests Unit
						'''
					}
				}
				stage('Run Examples') {
					agent {
						label "windows"
					}
					steps {
						bat '''
							@echo off
							if not exist ApsimX (
								git config --system core.longpaths true
								git clone https://github.com/APSIMInitiative/ApsimX ApsimX
							)
							if not exist APSIM.Shared (
								git clone https://github.com/APSIMInitiative/APSIM.Shared APSIM.Shared
							)
							git -C APSIM.Shared pull origin master
							cd ApsimX\\Jenkins
							call cleanup
							call build
							call runTests Examples
						'''
					}
				}
			}
		}
    }
}